<div class="portlet"
     tal:condition="context/externalrefs"
     tal:define="current_task view/currentBugTask;
                 url current_task/fmt:url">

  <h4>Related Web Links</h4>

  <div class="portletBody">
    <div class="portletContent">
      <ul>
        <li class="webref"
            tal:repeat="ref context/externalrefs">
          <a tal:attributes="href ref/url"
             tal:content="ref/title">http://www.wizardzz.com/path/to/data.html
          </a>
          <small>(<a tal:attributes="href string:$url/references/${ref/id}/+edit">edit</a>)</small>
        </li>
      </ul>

      <ul style="text-align: right">
        <li class="add">
          <a tal:attributes="href string:$url/references/+new">Add</a>
        </li>
      </ul>
    </div>
  </div>
</div>
