<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="builds_list" tal:condition="not: view/setupBuildList">

  <tal:batch define="batch view/complete_builds">

    <div style="padding: 0em 1em 2em 0em">
     <form name="build_records_state" action="" method="GET">
          <tal:searchname condition="view/searchName">
            Package:
            <input id="build_text" title="Package Name" size="20"
                   type="text" name="build_text"
                   tal:attributes="value view/text"/>
          </tal:searchname>

          <select id="build_state" name="build_state" size="1">
          <option tal:repeat="option view/available_states"
                  tal:attributes="selected option/selected;
                                  value option/value"
                  tal:content="option/name" />
          </select>
          <input type="submit" value="Update" />
     </form>
    </div>

  <tal:navigation_top
     replace="structure view/batchnav/@@+navigation-links-upper" />

  <table class="listing" tal:condition="batch">
    <tbody>
      <tal:batch_repeat repeat="complete_build batch">
        <tr tal:define="build complete_build/build">
          <td class="left icon">
             <tal:icon replace="structure build/image:icon" />
          </td>
          <td>
            <a tal:attributes="href build/fmt:url"
               tal:content="build/title">NAME
            </a>
            <div>
              <tal:needs_deps condition="build/dependencies">
                Missing dependencies:
                <tal:dependencies content="build/dependencies" />
              </tal:needs_deps>
            </div>
            <div tal:condition="build/was_built">
              Build started
              <tal:soyuz_record condition="build/buildduration">
                 <span
                   tal:attributes="
                     title build/calculated_buildstart/fmt:datetime"
                   tal:content="
                   build/calculated_buildstart/fmt:displaydate" />
              </tal:soyuz_record>
              <tal:gina_record condition="not: build/buildduration">
                  <i>not available</i>
              </tal:gina_record>
              <tal:show_builder_info condition="view/showBuilderInfo">
                on
                <a
                  tal:condition="build/builder"
                  tal:content="build/builder/title"
                  tal:attributes="href build/builder/fmt:url"
                />
                <tal:unknown_builder condition="not: build/builder">
                   <i>an unknown build machine</i>
                </tal:unknown_builder>
              </tal:show_builder_info>
              <tal:date_built condition="build/datebuilt">
                and finished
                <span
                  tal:attributes="title build/datebuilt/fmt:datetime"
                  tal:content="build/datebuilt/fmt:displaydate" />
                taking
                <tal:time
                  content="build/buildduration/fmt:approximateduration" />
                <tal:log condition="build/buildlog">
                  &mdash;
                  <a tal:attributes="href build/buildlog/http_url"
                    >see the log</a>
                </tal:log>
              </tal:date_built>
            </div>
            <div tal:condition="not: build/was_built"
                    tal:define="bq complete_build/buildqueue_record">
              <tal:buildqueue condition="bq">
                <tal:pending condition="not: bq/builder">
                  Pending (<span tal:replace="bq/lastscore" />)
                </tal:pending>
                <tal:building condition="bq/builder">
                  Build started
                  <span
                    tal:attributes="title bq/buildstart/fmt:datetime"
                    tal:content="bq/buildstart/fmt:displaydate" />
                  on
                  <a tal:content="bq/builder/title"
                     tal:attributes="href bq/builder/fmt:url"/>
                </tal:building>
              </tal:buildqueue>
            </div>
          </td>
        </tr>
      </tal:batch_repeat>
    </tbody>
  </table>

  <tal:navigation_bottom replace="structure view/batchnav/@@+navigation-links-lower" />

  <div id="empty-result" tal:condition="view/no_results">
     No matching builds.
  </div>
  <div tal:condition="not: view/no_results">
    <tal:form_submitted condition="not: view/form_submitted">
     No packages currently building.
    </tal:form_submitted>
  </div>


  </tal:batch>
</div>
