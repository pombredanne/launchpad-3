<div class="portlet">
  <h2 tal:content="context/title">product title</h2>

  <div class="portletBody">
    <div class="portletContent">

      <tal:has-homepage condition="context/homepageurl">
          <b>External links:</b><br />
          <img src="/@@/link" alt="" />
          <a tal:attributes="href context/homepageurl"
             class="link">Home page</a><br />
      </tal:has-homepage>

      <b>Registrant:</b><br />
      <img alt="" src="/@@/user" />
      <a tal:attributes="href context/owner/fmt:url"
         tal:content="context/owner/browsername"
         class="link">ownername
      </a>
      <br />

      <b>Bug contact:</b><br />
      <span tal:condition="context/bugcontact">
        <img alt="" src="/@@/user" />
        <a
          tal:attributes="href context/bugcontact/fmt:url"
          tal:content="context/bugcontact/browsername"
        >foo bar</a>
      </span>
      <span tal:condition="not:context/bugcontact">
        <i>Not yet assigned</i>
      </span>
      <br />

      <b>Security contact:</b><br />
      <span tal:condition="context/security_contact">
        <img alt="" src="/@@/user" />
        <a tal:attributes="href context/security_contact/fmt:url"
           tal:content="context/security_contact/browsername">sample person</a>
      </span>
      <span tal:condition="not:context/security_contact">
        <i>Not yet assigned</i>
      </span>
      <br />

      <b>Driver:</b><br />
      <i tal:condition="not:context/driver">Not yet assigned</i>
      <tal:has_driver condition="context/driver">
        <img alt="" src="/@@/user" />
        <a tal:content="context/driver/browsername"
           tal:attributes="href context/driver/fmt:url">Carlos Perello</a>
      </tal:has_driver>
      <br />

      <b>Translation group:</b><br />
      <img alt="" src="/@@/languages" />
      <tal:block condition="context/translationgroup">
      <a tal:attributes="href
               string:/translations/groups/${context/translationgroup/name}/"
         tal:content="context/translationgroup/title"
      >Group</a><br />
      </tal:block>
      <tal:block condition="not: context/translationgroup">
      <i>Not assigned</i><br />
      </tal:block>
      <b>Translation contributions:</b><br />
      <span tal:replace="context/translationpermission/title">Open</span><br />

      <tal:bugtracker
           tal:define="bugtracker context/getExternalBugTracker"
           tal:condition="not:context/official_malone">

        <b>Bug Tracker:</b><br />
        <a tal:condition="bugtracker" tal:content="bugtracker/title"
           tal:attributes="href bugtracker/fmt:url">Tracker</a>
        <i tal:condition="not: bugtracker">None specified</i>
        <br />

      </tal:bugtracker>


      <b>Product status:</b>
      <ul>
        <li tal:condition="context/reviewed">Reviewed</li>
        <li tal:condition="context/active">Active</li>
        <li tal:condition="not: context/active">Disabled</li>
        <li tal:condition="not: context/official_rosetta"
        ><i>Doesn&rsquo;t use Rosetta</i></li>
        <li tal:condition="not: context/official_malone"
        ><i>Doesn&rsquo;t use Malone</i></li>
      </ul>
      <tal:has-project condition="context/project">
        <b>Part of:</b><br />
        <img src="/@@/project" alt="" />
        <a tal:attributes="href context/project/fmt:url"
           tal:content="context/project/title"
           class="link">Project name</a><br />
      </tal:has-project>
      
      <div id="registered-series">
        <b>Registered series:</b>
        <ul>
          <li tal:repeat="series view/sorted_serieslist">
            <a tal:attributes="href series/fmt:url"
               tal:content="series/name">1.0</a>
            <small tal:condition="python:series == context.development_focus"
                   >(development focus)</small>
          </li>
        </ul>
      </div>

    </div>
  </div>
</div>
