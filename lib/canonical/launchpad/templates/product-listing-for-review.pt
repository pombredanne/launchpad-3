<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<img src="/@@/product" />
<a tal:attributes="href context/fmt:url"
   tal:content="context/title">Project Title Here</a>
<div style="margin-left: 17px;">
  <div tal:content="context/summary" tal:condition="context/summary">
    Summary Goes Here
  </div>
  <div>
    Registered by <a
      tal:replace="structure context/owner/fmt:link">Foo Bar</a>
    <span
      tal:attributes="title context/datecreated/fmt:datetime"
      tal:content="context/datecreated/fmt:displaydate">2005-10-12</span>
  </div>
</div>
</tal:root>
