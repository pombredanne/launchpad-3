<tal:layout define="columns1 default">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="rosetta"
>
  <body>
    <div metal:fill-slot="main">
      <div
        id="applications"
        tal:content="structure context/@@+applicationbuttons/translations"
      />
      <div id="mainarea" class="tab-translations">
        <div class="t">
          <div class="u">
            <div class="v">
              <div class="w">
                <div class="x">
                  <div class="y">
                    <div class="z">
                      <div id="container">
                        <h1>Translations</h1>
                        <form class="central" action="/+search" method="get">
                          <input id="text" name="q" size="50" type="text" />
                          <input type="submit" value="Search Projects" />
                        </form>
                        <p id="application-summary">
                          With Launchpad you can translation Free Software
                          into your own language.
                        </p>
                        <ul class="buttons">
                          <li>
                            <a href="+tour">
                              <img
                                alt="Take a tour"
                                src="/+icing/but_lrg_takeatour.gif"
                              />
                            </a>
                          </li>
                        </ul>
                        <div class="three columns">
                          <div class="column">
                            <h2>Translatable operating systems</h2>
                            <ul class="distrorelease">
                              <li tal:repeat="distrorelease context/translatable_distroreleases">
                                <a tal:attributes="href string:/${distrorelease/distribution/name}/${distrorelease/name}/+translations">
                                  <tal:distroname replace="distrorelease/distribution/displayname" />
                                  <tal:version
                                    condition="distrorelease/version"
                                    replace="distrorelease/version"
                                  />
                                  <tal:codename
                                    condition="not:distrorelease/version"
                                    replace="distrorelease/title"
                                  />
                                </a>
                              </li>
                            </ul>
                          </div>
                          <div class="column">
                            <h2>Translatable products</h2>
                            <ul class="product">
                              <li tal:repeat="product context/translatable_products">
                                <a
                                  tal:attributes="href string:/${product/name}/+translations"
                                  tal:content="product/title"
                                />
                              </li>
                            </ul>
                          </div>
                          <div class="column">
                            <h2>Languages</h2>
                          </div>
                        </div>
                        <div
                          id="application-footer"
                          tal:content="structure context/@@+portlet-stats"
                        />
                      </div><!--container-->
                    </div><!--z-->
                  </div><!--y-->
                </div><!--x-->
              </div><!--w-->
            </div><!--v-->
          </div><!--u-->
        </div><!--t-->
      </div><!--mainarea-->
    </div><!--main-->
  </body>
</html>
</tal:layout>
