<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="malone"
>
  <body>
    <metal:heading fill-slot="pageheading">
      <div>
        <img alt="" src="/@@/bug" />
        <a tal:attributes="href context/fmt:url"
        >Bug #<tal:bug replace="context/bug/id">3252543</tal:bug></a>:
        <tal:title replace="context/bug/title">Foo doesn't work</tal:title>
      </div>
      <h1>Edit bug description</h1>
    </metal:heading>

  <metal:leftportlets fill-slot="portlets_one">
    <div tal:replace="structure context/bug/@@+portlet-details" />
    <div tal:replace="structure context/bug/@@+portlet-subscribers" />
  </metal:leftportlets>

  <metal:rightportlets fill-slot="portlets_two">
    <div tal:replace="structure context/@@+portlet-search" />
    <div tal:replace="structure context/bug/@@+portlet-cve" />
    <div tal:replace="structure context/bug/@@+portlet-reference" />
    <div tal:replace="structure context/bug/@@+portlet-watch" />
  </metal:rightportlets>

  <div metal:fill-slot="main">

    <div metal:use-macro="context/@@launchpad_form/form">


      <metal:extra_info metal:fill-slot="extra_info">

        <p>
          Your changes will be reflected in all contexts where
          this bug has been reported.
        </p>

        <p class="informational message"
           tal:repeat="message view/notifications"
           tal:content="structure message">
          Confirmation message.
        </p>

      </metal:extra_info>

    </div>

  </div>

  </body>
</html>
