<div class="portlet" id="portlet-duplicates"
     tal:condition="context/duplicates">

  <h2>Duplicates of this bug</h2>

  <div class="portletBody">
    <div class="portletContent">

      <ul>
        <li tal:repeat="dupe view/duplicates">
          <a tal:attributes="href dupe/url;
                             title dupe/title">
             Bug #<span tal:replace="dupe/id">3445</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
