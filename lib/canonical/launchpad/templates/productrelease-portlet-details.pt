<div class="portlet">
    <h2 tal:content="context/title">productrelease title</h2>

    <div class="portletBody">
        <div class="portletContent even">

            <b>Registrant:</b><br />
            <img alt="" src="/@@/user" />
            <a tal:attributes="href context/owner/fmt:url"
               tal:content="context/owner/browsername"
               class="link">ownername</a><br />

            <b>Product:</b>
            <a href="#"
               tal:attributes="href context/product/fmt:url"
               tal:content="context/product/displayname"
               class="link">product displayname</a><br />

            <b>Series:</b>
            <span tal:replace="context/productseries/name" /><br />

            <b>Release version:</b>
            <span tal:replace="context/version" /><br />

            <b>Released:</b>
            <span tal:replace="context/datereleased/fmt:date" /><br />

            <b>Registered:</b>
            <span tal:replace="context/datecreated/fmt:date" /><br />

        </div>
    </div>
</div>
