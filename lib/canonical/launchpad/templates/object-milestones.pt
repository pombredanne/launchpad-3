<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="launchpad"
>

<body>

<metal:portlets fill-slot="portlets">
</metal:portlets>

<div metal:fill-slot="main">

  <h1>Milestones</h1>

  <p><a tal:attributes="href context/fmt:url">&laquo; Back</a></p>
  <tal:milestones define="milestones context/all_milestones">
    <table tal:condition="milestones">
      <tr tal:attributes="id string:milestone-${milestone/name}"
          tal:repeat="milestone context/all_milestones">
        <td><img src="/@@/milestone" alt="" /></td>
        <td>
          <strong>
            <a tal:content="milestone/name"
               tal:attributes="href milestone/fmt:url">
               milestone name
            </a>
          </strong>
        </td>
        <td tal:content="milestone/dateexpected/fmt:date" />
        <td><strong tal:condition="not: milestone/visible"
               >(Inactive)</strong>
        </td>
        <td>
          <a tal:attributes="href milestone/series_target/fmt:url"
             tal:replace="milestone/series_target/displayname">Feisty</a>
        </td>
        <td tal:content="structure milestone/description/fmt:shorten/40"
            />
      </tr>
    </table>

    <tal:no-milestones condition="not: milestones">
      <p>There are no milestones associated with
        <span tal:replace="context/title" />
      </p>
    </tal:no-milestones>
  </tal:milestones>

  <p><a tal:attributes="href context/fmt:url">&laquo; Back</a></p>

</div>
</body>
</html>
