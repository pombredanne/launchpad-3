<div class="portlet">

  <h2><span tal:replace="context/displayname">Warty
      </span> translation statistics</h2>

  <div class="portletBody portletContent">

    <tal:block repeat="drlang view/requestDistroLangs">
      <span tal:replace="drlang/language/englishname">Latin</span>:<br />
      <a tal:attributes="href drlang/fmt:url"
        ><span style="white-space: nowrap"
               tal:content="structure drlang/@@+barchart" /></a><br />
    </tal:block>

    <ul class="add">
      <li>
        <a tal:attributes="href string:${context/fmt:url}/+translations"
           title="See all languages in this release of the distro">
          More languages...
      </a>
      </li>
    </ul>

  </div>

</div>
