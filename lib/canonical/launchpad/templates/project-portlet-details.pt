<div class="portlet" id="portlet-details">
  <div class="portletBody portletContent">
    <table class="summary">
      <tbody>
        <tr>
          <th>Project group status:</th>
          <td>
            <tal:block condition="context/active">Active</tal:block>
            <tal:block condition="not: context/active">Disabled</tal:block>
            <tal:block condition="context/reviewed"><br />Reviewed</tal:block>
            <tal:block condition="context/icon"><br />Branded
              <tal:icon replace="structure context/image:icon" />
            </tal:block>
          </td>
        </tr>
        <tr>
          <th>Maintainer:</th>
          <td>
            <a
              tal:content="context/owner/browsername"
              tal:attributes="href context/owner/fmt:url"
            >ownername</a>
          </td>
        </tr>
        <tr>
          <th>Driver:</th>
          <td tal:condition="not:context/driver">Not yet appointed</td>
          <td tal:condition="context/driver">
            <a
              tal:content="context/driver/browsername"
              tal:attributes="href context/driver/fmt:url"
            >Carlos Perello</a>
          </td>
        </tr>
        <tr>
          <th>Bug tracker:</th>
          <td>
            <a
              tal:condition="context/bugtracker"
              tal:content="context/bugtracker/title"
              al:attributes="href context/bugtracker/fmt:url"
            >tracker title</a>
            <tal:none condition="not:context/bugtracker">None specified</tal:none>
          </td>
        </tr>
        <tal:translation-group
          replace="structure context/@@+translation-group-and-permission-info" />
      </tbody>
    </table>
  </div>
</div>
