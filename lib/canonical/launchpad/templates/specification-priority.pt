<tal:tag condition="view/update"/>
<html
    xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    metal:use-macro="context/@@main_template/master"
    i18n:domain="launchpad">

<body>

<metal:leftportlets fill-slot="portlets_one">
</metal:leftportlets>

<metal:heading fill-slot="pageheading">
  <h4><span tal:replace="context/target/displayname">Firefox</span>
      Feature Specification:</h4>
  <h2 tal:content="context/title">Spec Title</h2>
</metal:heading>

<div metal:fill-slot="main">

  <div metal:use-macro="context/@@launchpad_editform/editform">

    <div metal:fill-slot="extra_info" class="documentDescription">
      The priority should reflect the views of the coordinating team of
      <span tal:replace="context/target/displayname">Ubuntu</span>.
    </div>

  </div>

</div>
</body>
</html>
