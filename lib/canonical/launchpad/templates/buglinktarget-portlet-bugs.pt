<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-related-bugs"
  tal:define="links view/buglinks"
  tal:condition="links" >

    <h2>Related bugs</h2>

    <div class="portletBody portletContent">

      <ul>
        <li class="bug" tal:repeat="link links">
          <a tal:attributes="href link/bug/fmt:url">#<span
             tal:replace="link/bug/id">122</span>:
            <span i18n:translate="" tal:replace="link/title">foo bar baz</span></a>
        </li>
      </ul>

    </div>

</div>
