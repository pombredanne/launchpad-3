<tal:root
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  omit-tag="">

<div class="portlet" id="portlet-map">

  <tal:can_view condition="context/required:launchpad.View"
                define="link context/menu:overview/map">
    <tal:team-has-unmapped-members 
        define="unmapped_count context/unmapped_participants/count"
        condition="unmapped_count">
      <strong><tal:count replace="unmapped_count" /> member(s)</strong> have not 
      set their location. <a tal:attributes="href link/target">Do it for 
      them!</a><br />
    </tal:team-has-unmapped-members>
    <tal:map condition="view/mapped_participants">
      <div id="team_map_div" style="height: 200px; border: 1px; margin-top: 4px;"></div>
      <tal:mapscript replace="structure view/map_portlet_html" />
    </tal:map>

    <a tal:condition="not: view/mapped_participants"
       tal:attributes="href link/target"
      ><img src="/+icing/portlet-map-unknown.png" /></a>
  </tal:can_view>

</div>
</tal:root>
