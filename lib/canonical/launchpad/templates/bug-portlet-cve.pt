<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-cve" tal:condition="context/cves"
  tal:define="current_task view/currentBugTask;
              url current_task/fmt:url"
>
  <h2>
    <abbr title="Common Vulnerabilities and Exposures index">CVE</abbr>
    references
  </h2>
  <div class="portletBody">

      <ul>
        <li class="cve" tal:repeat="cve context/cves">
          <a tal:attributes="href cve/fmt:url;
                             title cve/description/fmt:shorten/40"
             tal:content="cve/sequence"
             >2002-1342</a>
        </li>
      </ul>

  </div>
</div>
