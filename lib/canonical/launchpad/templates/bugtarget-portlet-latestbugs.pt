<div class="portlet" id="portlet-latest-bugs"
     tal:condition="view/latestBugTasks">
  <h2>Latest bugs reported</h2>

    <div class="portletBody portletContent">
      <p tal:condition="not: view/latestBugTasks">
        No bugs have been reported for <span tal:replace="context/displayname" />.
      </p>
      <table tal:condition="view/latestBugTasks">
        <tbody>
          <tal:per_task repeat="bugtask view/latestBugTasks"
                        replace="structure bugtask/@@+listing-detailed"
                        />
        </tbody>
      </table>

  </div>
</div>
