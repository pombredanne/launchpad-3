<div class="portlet" tal:condition="view/latestBugTasks">
  <h2>Latest bugs reported</h2>

    <div class="portletBody portletContent">
      <p tal:condition="not: view/latestBugTasks">
        No bugs have been reported for <span tal:replace="context/displayname" />.
      </p>
      <table tal:condition="view/latestBugTasks" class="latest">
        <tbody>
          <tr tal:repeat="bugtask view/latestBugTasks">
            <td class="icon left" tal:content="structure bugtask/fmt:icon" />
            <td>

            <div class="title">
              <a tal:attributes="href bugtask/fmt:url">
                <tal:bugnumber content="string: #${bugtask/bug/id}" />.

             <span tal:replace="bugtask/bug/title">bug
             title</span>

              </a>
            </div>
            <div>
              <tal:product condition="bugtask/product">
                <tal:productname replace="bugtask/product/name" />,
              </tal:product>
              reported by <tal:reporter replace="bugtask/bug/owner/displayname" />
            </div>

            </td>
          </tr>
        </tbody>
      </table>

  </div>
</div>
