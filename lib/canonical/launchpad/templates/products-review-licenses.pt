<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="view/macro:page/onecolumn"
  i18n:domain="launchpad"
>

<body>

<div metal:fill-slot="main"
     tal:define="batch view/forReviewBatched">

  <h1>Projects for review</h1>

  <div tal:condition="not: batch/currentBatch" class="warning message">
    No items found with these search options.
  </div>
  <tal:result condition="batch/currentBatch">
    <h3 >Please review these items.</h3>
    <tal:navigation replace="structure batch/@@+navigation-links-upper" />
    <table id="product-listing" class="listing">
      <thead>
        <th>Project</th>
        <th>Active</th>
        <th>Reviewed</th>
        <th>License approved</th>
        <th>Registered by</th>
        <th>Licenses</th>
        <th>License info</th>
        <th>Reviewer whiteboard</th>
      </thead>
      <tbody>
        <div tal:repeat="product batch/currentBatch"
            tal:replace="structure product/@@+listing-for-review" />
      </tbody>
    </table>
    <tal:navigation replace="structure batch/@@+navigation-links-lower" />
  </tal:result>

  <form action="."
        tal:attributes="action view/action_url"
        name="launchpadform"
        method="GET"
        accept-charset="UTF-8">

    <div metal:use-macro="context/@@launchpad_form/formbody">

      <metal:widgets fill-slot="widgets">
        <table class="form">
          <tal:block define="widgets view/full_row_widgets"
                    repeat="widget widgets">
            <metal:block use-macro="context/@@launchpad_form/widget_row"/>
          </tal:block>
          <tr>
            <td colspan="2">
            <table>
              <tr><td>
              <table class="form">
              <tal:block define="widgets view/side_by_side_widgets"
                        repeat="widget_pair widgets">
                  <tal:block tal:define="widget python: widget_pair[0]">
                    <metal:block
                      tal:condition="widget"
                      use-macro="context/@@launchpad_form/widget_row"/>
                  </tal:block>
              </tal:block>
              </table>
            </td>
            <td>
              <table class="form">
              <tal:block define="widgets view/side_by_side_widgets"
                        repeat="widget_pair widgets">
                  <tal:block tal:define="widget python: widget_pair[1]">
                    <metal:block
                      tal:condition="widget"
                      use-macro="context/@@launchpad_form/widget_row"/>
                  </tal:block>
              </tal:block>
              </table>
            </td></tr>
            </table>
            </td>
          </tr>
        </table>
      </metal:widgets>

    </div>

    <input type="submit" name="search" value="Search" class="button" />

  </form>

</div>

</body>
</html>
