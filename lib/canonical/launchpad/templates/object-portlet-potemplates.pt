<div class="portlet" id="portlet-potemplates"
     tal:condition="context/currentpotemplates">

  <h2>Translation templates for <span tal:replace="context/displayname">
        Mozilla</span></h2>

  <div class="portletBody portletContent ">

    <ul>
      <li class="translations"
          tal:repeat="template context/currentpotemplates">
        <a tal:content="template/title"
               tal:attributes="href template/fmt:url">
          po template title</a>
      </li>
    </ul>

  </div>

</div>
