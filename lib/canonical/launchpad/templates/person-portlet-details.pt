<div class="portlet" id="portlet-details"
     tal:condition="context/is_valid_person_or_team">
  <h2 tal:content="context/browsername" />

  <div class="portletBody portletContent">

    <tal:is_person condition="not: context/teamowner">
      <b tal:content="context/browsername">Mark Shuttleworth</b>
      (<a tal:attributes="href context/fmt:url"
          tal:content="context/name">sabdfl</a>)<br />

      <tal:has_preferredemail condition="context/preferredemail">

        <tal:logged_in condition="request/lp:person">

          <tal:hidden_emails condition="context/hide_email_addresses">
            <div title="This email address is not disclosed to others."
                 tal:condition="context/required:launchpad.Edit">
              <b>Preferred address:</b>

              <span style="white-space: nowrap">&nbsp;&nbsp;&nbsp;
                <img src="/@@/private" alt="" /> 
                <span tal:replace="context/preferredemail/email">foo@bar.com</span>
              </span>
              <br />

            </div>
          </tal:hidden_emails>

          <tal:visible_emails condition="not: context/hide_email_addresses">
            <b>Preferred address:</b><br />

            &nbsp;&nbsp;&nbsp;<img src="/@@/mail" alt="" />
              <span tal:replace="context/preferredemail/email">foo@bar.com</span>
            <br />

          </tal:visible_emails>

        </tal:logged_in>

        <b>Timezone:</b>
        <span tal:replace="context/timezone">UTC</span>
        <i tal:condition="not: context/timezone">None given</i><br />

        <b>Ubuntero:</b>
        <tal:block condition="context/is_ubuntero">Yes</tal:block>
        <tal:block condition="not: context/is_ubuntero">
            No
            <tal:is_request_person condition="view/viewingOwnPage">
              <small>(<a href="/codeofconduct">apply now</a>)</small>
            </tal:is_request_person>
        </tal:block>
        <br />

        <b>Karma:</b>
        <span id="karma-total" tal:content="context/karma">342</span><br />
      </tal:has_preferredemail>

    </tal:is_person>

    <tal:is_team condition="context/teamowner">

      <b tal:content="context/subscriptionpolicy/title">Policy</b>:
      <span tal:replace="context/subscriptionpolicy/description">More
      detail goes here.</span>
      <br />

    </tal:is_team>

  </div>

</div>
