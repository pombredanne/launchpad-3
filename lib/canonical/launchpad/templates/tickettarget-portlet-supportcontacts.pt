<div class="portlet" id="portlet-support-contacts">

  <h4>Support contacts for <span tal:replace="context/displayname"/>:</h4>

  <div class="portletBody portletContent">

    <ul class="people">
      <li tal:repeat="support_contact context/support_contacts">
        <a href="#"
           tal:content="support_contact/browsername"
           tal:attributes="href support_contact/fmt:url">Ubuntu Team</a>
      </li>
    </ul>


    <p tal:condition="not:context/support_contacts">
      <i>There are no support contacts.</i>
    </p>

  </div>
</div>
