<div class="portlet">
  <h4 tal:content="context/title">branch title</h4>
  <div class="portletBody portletContent">

        <tal:has_homepage condition="context/home_page">
          <b>External links:</b><br />
          <img src="/++resource++link_icon.gif" alt="" />
          <a tal:attributes="href context/home_page"
             class="link">Home page</a><br />
        </tal:has_homepage>

        <tal:has_author condition="context/author">
          <b>Author:</b><br />
          <img src="/++resource++user.gif">
          <a tal:attributes="href context/author/fmt:url"
             tal:content="context/author/browsername"
             class="link">Author Nome</a><br />
        </tal:has_author>

        <tal:different_registrant condition="not:view/author_is_owner">
          <b>Registrant:</b><br />
          <img src="/++resource++user.gif">
          <a tal:attributes="href context/owner/fmt:url"
             tal:content="context/owner/browsername"
             class="link">Owner Name</a><br />
        </tal:different_registrant>

        <tal:has_product condition="context/product">
          <b>Product:</b><br />
          <a tal:attributes="href context/product/fmt:url"
             tal:content="context/product/displayname">Mozilla Firefox</a><br />
        </tal:has_product>

        <b>Lifecycle Status:</b><br />
        <span tal:replace="context/lifecycle_status/title">Experimental</span>
        <br />

  </div>
</div>
