<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  class="portlet" id="portlet-attachments"
  tal:condition="context/attachments"
  tal:define="current_task view/currentBugTask;
              url current_task/fmt:url"
>

  <h2>Bug attachments</h2>

  <div class="portletBody">
    <div class="portletContent">
      <ul>
        <li class="download"
            tal:repeat="attachment context/attachments">
          <a tal:attributes="href attachment/libraryfile/http_url"
             tal:content="attachment/title">
            Attachment Title
          </a>
          <small>
            (<a tal:attributes="href string:${url}/attachments/${attachment/id}">edit</a>)
          </small>
        </li>
      </ul>
      <ul style="text-align: right">
        <li class="add">
          <a tal:attributes="href string:$url/+addcomment">
            Add
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
