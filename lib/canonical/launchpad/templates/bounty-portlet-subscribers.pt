<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  class="portlet" id="portlet-subscribers">
  <h2>Bounty subscribers</h2>

  <div class="portletBody portletContent">

    <ul class="person">
      <li tal:repeat="sub context/subscriptions">
        <a href="#"
           tal:content="sub/person/browsername"
           tal:attributes="href sub/person/fmt:url">Dafydd Harries</a>
      </li>
      <li class="info" tal:condition="not: context/subscriptions">
        <i>No subscribers</i>
      </li>
    </ul>
  </div>
</div>
