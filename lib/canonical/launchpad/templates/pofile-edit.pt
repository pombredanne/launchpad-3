<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

        <h1>Edit the plural forms for this pofile</h1>

        <form action="+edit" method="POST" enctype="multipart/form-data">

        <fieldset>
            Number of Pluralforms:
            <input type="text" name="pluralforms"
                   tal:attributes="value context/pluralforms"/>
            <br/>
            Pluralform Expression:
            <input type="text" name="expression"
                   tal:attributes="value view/header/getPluralFormExpression"/>
            <br/>
            <input type="submit" name="EDIT" value="Change" />
        </fieldset>
        </form>

</div>

</body>
</html>
