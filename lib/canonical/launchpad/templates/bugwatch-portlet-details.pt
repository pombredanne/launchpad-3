<div class="portlet">
  <h4>Bug Watch Details:</h4>
  <div class="portletBody">
    <div class="portletContent">
    Malone <a tal:attributes="href context/bug/@@absolute_url">Bug #
                      <span tal:replace="context/bug/id">4532</span></a><br />
    <b>Tracker:</b>
      <a tal:attributes="href context/bugtracker/fmt:url">
        <span tal:replace="context/bugtracker/title">bugtracker
        title</span><br />
      </a>
    <b>Remote Bug ID:</b>
      <a tal:attributes="href context/url">
        <span tal:replace="context/remotebug">6642</span>
      </a><br />
    <b>Last Status:</b>
        <span tal:condition="not: context/remotestatus">
            None recorded
        </span>
        <span tal:replace="context/remotestatus">6642</span><br />
    <b>Changed:</b>
      <span tal:replace="context/lastchanged/fmt:date">12 Jan 2004</span><br />
    <b>Checked:</b>
      <span tal:replace="context/lastchecked/fmt:date">13 Jan 2004</span><br />
    <b>Created:</b>
      <span tal:replace="context/datecreated/fmt:date">15 Feb 2003</span><br />
    <b>By:</b>
      <img src="/++resource++user.gif" />
      <a tal:attributes="href string:/people/${context/owner/name}/"
         tal:content="context/owner/browsername">Foo Bar</a><br />
    </div>
  </div>
</div>
