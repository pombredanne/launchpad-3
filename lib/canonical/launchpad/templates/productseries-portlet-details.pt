<div class="portlet">
  <h2 tal:content="context/title">Product series details</h2>

  <div class="portletBody portletContent">
    <b>Product:</b>
    <a tal:attributes="href context/product/fmt:url"
       tal:content="context/product/displayname">product</a><br />

    <b>Series:</b>
    <span tal:replace="context/name">name</span><br />

    <b>Registrant:</b><br />
    <img alt="" src="/@@/user" />
    <a tal:attributes="href context/owner/fmt:url"
       tal:content="context/owner/browsername">owner name</a><br />

    <b>Drivers:</b><br />
    <tal:per_driver repeat="driver context/drivers">
      <img alt="" src="/@@/user" />
      <a tal:content="driver/browsername"
         tal:attributes="href driver/fmt:url">Carlos Perello</a>
      <br />
    </tal:per_driver>

  </div>
</div>
