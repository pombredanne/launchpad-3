<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  tal:condition="not:exists:body"
  id="actions"
  class="portlet"
>
  <h2>Actions</h2>
  <ul>
    <tal:block repeat="link view/contextmenuitems">
      <li tal:content="structure link/@@+link">
        Link
      </li>
    </tal:block>
    <tal:block repeat="link view/applicationmenuitems">
      <li tal:content="structure link/@@+link">
        Link
      </li>
    </tal:block>
    <tal:block repeat="link view/navigationmenuitems">
      <li tal:content="structure link/@@+link">
        Link
      </li>
    </tal:block>
  </ul>
</div>
