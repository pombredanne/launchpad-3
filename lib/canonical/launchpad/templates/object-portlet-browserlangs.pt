<div class="portlet" id="portlet-browser-languages"
     tal:condition="view/browserLanguages">

    <h2>Your browser languages</h2>

    <div class="portletBody">

        <div class="portletContent">

          <ul>

          <li
            class="language"
            tal:repeat="lang view/browserLanguages"
            tal:content="lang/englishname"
          />

          </ul>

        </div>
    </div>
</div>
