<div class="portlet">

  <h4><span tal:replace="context/target/displayname">Ubuntu</span> Ticket
      #<span tal:replace="context/id">234</span>:</h4>

  <div class="portletBody portletContent">

    <b>Support request from:</b><br />
    <img src="/++resource++user.gif" />
    <a tal:attributes="href context/owner/fmt:url"
       tal:content="context/owner/browsername">Foo Bar</a><br />
	
    <b>Status:</b>
    <span tal:replace="context/status/title">Open</span><br />

    <b>Priority:</b>
    <span tal:replace="context/priority/title">Normal</span><br />

    <b>For:</b>
    <span tal:condition="context/product"
          tal:replace="context/product/name">Firefox</span>
    <span tal:condition="context/distribution"
          tal:replace="context/distribution/name">ubuntu</span>
    <span tal:condition="context/sourcepackagename"
          tal:replace="context/sourcepackagename/name">moz-ff</span>
    <br />
    
    <tal:block condition="context/datedue">
      <b>Due:</b>
      <span tal:replace="context/datedue/fmt:date" /><br />
    </tal:block>

    <b>Created:</b>
    <span tal:replace="context/datecreated/fmt:date" /><br />

    <b>Assignee:</b><br />
    <tal:block condition="context/assignee">
      <img src="/++resource++user.gif" />
      <a tal:attributes="href context/assignee/fmt:url"
         tal:content="context/assignee/browsername">Foo Bar</a>
    </tal:block>
    <tal:block condition="not: context/assignee">
      <i>No assignee</i>
    </tal:block>
    <br />

    <b>Answered By:</b><br />
    <tal:block condition="context/answerer">
      <img src="/++resource++user.gif" />
      <a tal:attributes="href context/answerer/fmt:url"
         tal:content="context/answerer/browsername">Foo Bar</a>
    </tal:block>
    <tal:block condition="not: context/answerer">
      <i>Not yet answered</i>
    </tal:block>
    <br />

    <b>Last Query:</b>
    <span tal:replace="context/datelastquery/fmt:date" /><br />

    <tal:block condition="context/datelastresponse">
      <b>Responded:</b>
      <span tal:replace="context/datelastresponse/fmt:date" /><br />
    </tal:block>

    <tal:block condition="context/dateanswered">
      <b>Answered:</b>
      <span tal:replace="context/dateanswered/fmt:date" /><br />
    </tal:block>

    <tal:block condition="context/dateclosed">
      <b>Closed:</b>
      <span tal:replace="context/dateclosed/fmt:date" /><br />
    </tal:block>

  </div>

</div>
