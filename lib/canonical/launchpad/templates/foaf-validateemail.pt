<tal:do-this-first tal:content="view/processForm" />

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/@@main_template/master"
      i18n:domain="launchpad">

<body>

<div metal:fill-slot="main">

    <div tal:condition="not: view/successfullyProcessed">
      <h1>Confirm e-mail address <code tal:content="context/email"></code></h1>

      <div tal:condition="view/errormessage" class="portalMessage"
           tal:content="structure view/errormessage">
      </div>

      <p>To confirm this address, enter your password.</p>

      <form autocomplete="off" name="validate" action="" method="POST">
        <table>
          <tbody>
            <tr>
              <th><label for="password">Launchpad password:</label></th>
              <td>
                <input type="password" size="30" name="password" />
              </td>
            </tr>
            <tr tal:condition="not: request/lp:person">
              <th></th>
              <td>
                <label>
                  <input type="checkbox" checked="checked" name="logmein" />
                  Log me in after confirming my e-mail address
                </label>
              </td>
            </tr>
            <tr>
              <th></th>
              <td class="actions">
                <input type="submit" name="SUBMIT_CHANGES" value="Confirm" />
              </td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>

</div>


</body>
</html>
