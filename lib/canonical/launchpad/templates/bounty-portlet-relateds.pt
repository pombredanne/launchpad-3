<div tal:condition="python: context.distributions or context.products or context.projects" class="portlet">

    <h4 tal:condition="context/distributions">Related distributions:</h4>

    <div tal:condition="context/distributions"
         class="portletBody portletContent">

      <ul>
        <li class="products" tal:repeat="distribution context/distributions">
          <a href="#"
             tal:content="distribution/displayname"
             tal:attributes="href
               string:/distros/${distribution/name}">Ubuntu</a>
        </li>
      </ul>

    </div>

    <h4 tal:condition="context/products">Related products:</h4>

    <div tal:condition="context/products"
         class="portletBody portletContent">

      <ul>
        <li class="products" tal:repeat="product context/products">
          <a href="#"
             tal:content="product/displayname"
             tal:attributes="href
             string:/products/${product/name}">Mozilla Firefox</a>
        </li>
      </ul>

    </div>

    <h4 tal:condition="context/projects">Related projects:</h4>

    <div tal:condition="context/projects"
         class="portletBody portletContent">

      <ul>
        <li class="products" tal:repeat="project context/projects">
          <a href="#"
             tal:content="project/displayname"
             tal:attributes="href
             string:/projects/${project/name}">Gnome</a>
        </li>
      </ul>

    </div>

</div>
