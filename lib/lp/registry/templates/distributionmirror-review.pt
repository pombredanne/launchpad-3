<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en"
  lang="en"
  dir="ltr"
  metal:use-macro="context/@@main_template/master"
  i18n:domain="launchpad"
>

<body>

<metal:rightportlets fill-slot="portlets_two">
  <div tal:replace="structure context/@@+portlet-details" />
</metal:rightportlets>

<div metal:fill-slot="main">

  <div metal:use-macro="context/@@launchpad_form/form">
    <p metal:fill-slot="extra_top">
      This mirror was registered by 
      <a tal:attributes="href context/owner/fmt:url"
        ><span tal:replace="context/owner/browsername" /></a>
      <tal:visible-email
        condition="context/owner/preferredemail/required:launchpad.View">
        (<span tal:replace="context/owner/preferredemail/email" />)
      </tal:visible-email>
    </p>
  </div>

</div>

</body>
</html>
