<div
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  id="page-summary"
  tal:condition="view/show_summary"
  tal:define="menu context/menu:branches|nothing">

  <p>
    <strong class="count" tal:content="view/owned_branch_count">100</strong>
    <tal:link condition="menu"
        replace="structure menu/owned/render"
        /><tal:no-link condition="not:menu">owned branches</tal:no-link>,
    <strong class="count" tal:content="view/registered_branch_count">100</strong>
    <tal:link condition="menu"
        replace="structure menu/registered/render"
        /><tal:no-link condition="not:menu">registered branches</tal:no-link>,
    <strong class="count" tal:content="view/subscribed_branch_count">100</strong>
    <tal:link condition="menu"
        replace="structure menu/subscribed/render"
        /><tal:no-link condition="not:menu">subscribed branches</tal:no-link>
  </p>
  <p id="merge-counts">
    <strong class="count" tal:content="view/active_review_count">5</strong>
    <tal:link condition="menu"
        replace="structure menu/active_reviews/render"
        /><tal:no-link condition="not:menu">active proposals</tal:no-link>,
    <strong class="count" tal:content="view/approved_merge_count">5</strong>
    <tal:link condition="menu"
        replace="structure menu/approved_merges/render"
        /><tal:no-link condition="not:menu">approved merges</tal:no-link>,
    <strong class="count" tal:content="view/requested_review_count">5</strong>
    <tal:link condition="menu"
        replace="structure menu/requested_reviews/render"
        /><tal:no-link condition="not:menu">requested reviews</tal:no-link>
  </p>
</div>
